<!--
    * MainWindow.axaml
    * ~~~~~~~~~~~
    * This source file defines the Avalonia UI structure for the main window.
-->

<Window
    x:Class="PandaLdr.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:PandaLdr.ViewModels"
    Title="PandaLdr"
    Width="686"
    Height="400"
    MinWidth="686"
    MinHeight="400"
    x:DataType="vm:MainWindowViewModel"
    Background="#212C54"
    Icon="/Assets/avalonia-logo.ico">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#1e284a" />
            <Setter Property="Foreground" Value="#f1f2f4" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>


    </Window.Styles>



    <Grid ColumnDefinitions="56, *">
        <!--  Sidebar.  -->
        <Border
            Grid.Column="0"
            VerticalAlignment="Stretch"
            Background="#1E284A"
            BorderBrush="#323E67"
            BorderThickness="1">
            <Grid
                Grid.Column="0"
                ColumnDefinitions="*"
                RowDefinitions="*">
                <StackPanel>
                    <Rectangle
                        Grid.Row="0"
                        Grid.Column="0"
                        Height="44"
                        Fill="#323E67" />
                    <Button
                        Grid.Row="0"
                        Grid.Column="0"
                        Height="45"
                        Background="#1E284A">
                        <Image
                            Width="45"
                            Height="25"
                            Source="/Assets/png/home-4x-white.png" />

                    </Button>
                    <Button
                        Grid.Row="0"
                        Grid.Column="0"
                        Height="45"
                        Background="#1E284A">
                        <Image
                            Width="45"
                            Height="21"
                            Source="/Assets/png/document-4x-white.png" />

                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <!--  Body  -->
        <Grid
            Grid.Column="1"
            ColumnDefinitions="*"
            RowDefinitions="Auto, *">
            <!--  Title bar.  -->
            <Border
                Grid.Row="0"
                Grid.Column="0"
                BorderBrush="#323E67"
                BorderThickness="0,1,1,1">
                <ComboBox
                    Height="42"
                    Background="#212C54"
                    BorderBrush="#323E67"
                    BorderThickness="0,0,1,1"
                    CornerRadius="0"
                    FontFamily="{StaticResource ManropeFont}"
                    FontSize="15"
                    Foreground="#97A0AA"
                    SelectedIndex="0">
                    <ComboBoxItem>Zoo Tycoon 1</ComboBoxItem>
                    <ComboBoxItem>Zoo Tycoon 2</ComboBoxItem>
                </ComboBox>

            </Border>
            <!--  Mods List  -->


        </Grid>
        <!--  Main content.  -->
        <Grid Grid.Column="1" RowDefinitions="Auto, *">
            <Border
                Grid.Column="1"
                Margin="0,35,0,0"
                Padding="20,20,20,0">
                <Grid ColumnDefinitions="*, Auto" RowDefinitions="43, Auto, *">
                    <!--  Left text block  -->
                    <Border
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        BorderBrush="#323E67"
                        BorderThickness="0">
                        <TextBlock
                            HorizontalAlignment="Left"
                            FontFamily="{StaticResource ManropeFont}"
                            FontSize="20"
                            Foreground="White"
                            Text="Mod Manager" />
                    </Border>
                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Padding="0,20">
                        <WrapPanel>
                            <TextBlock
                                FontFamily="{StaticResource ManropeFont}"
                                FontSize="15"
                                Foreground="#97A0AA"
                                TextWrapping="Wrap">
                                Manage your mods using PANDAâ€™s enable/disable features.
                            </TextBlock>
                        </WrapPanel>
                    </Border>

                    <!--  Right text block  -->
                    <Button
                        Grid.Column="1"
                        Margin="0,0,5,0"
                        Padding="10"
                        VerticalAlignment="Center"
                        Background="#F8AA62">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <Image
                                Width="14"
                                Height="14"
                                Source="/Assets/png/bolt-2x-blue.png" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource ManropeFont}"
                                FontWeight="Bold"
                                Foreground="#1E284A">
                                Launch Game
                            </TextBlock>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
            <DataGrid
                Grid.Row="1"
                Grid.Column="1"
                Margin="20"
                BorderThickness="0"
                CanUserReorderColumns="True"
                CanUserResizeColumns="True"
                CanUserSortColumns="True"
                GridLinesVisibility="None"
                IsReadOnly="True"
                ItemsSource="{Binding MyList}">

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Status">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Margin="0,10"
                                    Padding="20,8"
                                    Background="#41b670"
                                    Content="Enabled"
                                    CornerRadius="0">
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <Image
                                            Width="14"
                                            Height="14"
                                            Source="/Assets/png/check-2x-blue.png" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontFamily="{StaticResource ManropeFont}"
                                            FontWeight="Bold"
                                            Foreground="#1E284A">
                                            Enabled
                                        </TextBlock>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Binding="{Binding}"
                        Foreground="#f1f2f4"
                        Header="Name" />
                    <DataGridTextColumn Header="Category" />
                    <DataGridTemplateColumn Header="Actions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <Button
                                        Margin="0,10"
                                        Padding="5"
                                        Background="Transparent"
                                        Content="Enabled"
                                        CornerRadius="0">
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <Image
                                                Width="14"
                                                Height="14"
                                                Source="/Assets/png/trash-2x-white.png" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        Margin="0,10"
                                        Padding="5"
                                        Background="Transparent"
                                        Content="Enabled"
                                        CornerRadius="0">
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <Image
                                                Width="14"
                                                Height="14"
                                                Source="/Assets/png/heart-2x-white.png" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>

</Window>
